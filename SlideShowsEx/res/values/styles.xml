<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<color name="color_background">#202020</color>
	<color name="main_color1">#FF0000</color>
	<color name="main_color2">#BF3030</color>
	<color name="main_color3">#A60000</color>
	<color name="main_color4">#FF4040</color>
	<color name="main_color5">#FF7373</color>
	
    <style name="AppTheme" parent="Theme.Sherlock">
        <item name="android:colorBackground">@color/color_background</item>
		<item name="android:windowBackground">@color/color_background</item>
		<item name="android:actionBarStyle">@style/ActionBarTheme</item>
		<item name="actionBarStyle">@style/ActionBarTheme</item>
		<item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
		<item name="actionOverflowButtonStyle">@style/OverFlow</item>
		<item name="android:actionBarSize">64dp</item> 
		<item name="actionBarSize">64dp</item> 
    </style>
    
	<style name="ActionBarOverlay" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
  
	<style name="ActionBarTheme" parent="Widget.Sherlock.ActionBar">
		<item name="android:background">@drawable/action_bar</item>
		<item name="background">@drawable/action_bar</item>
	</style>

	<style name="OverFlow" parent="Widget.Sherlock.ActionButton.Overflow">
    	<item name="android:src">@drawable/ic_action_overflow</item>
	</style>
</resources>